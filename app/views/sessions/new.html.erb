<style>
    .form {
        margin-left: 20%;
        margin-right: 20%;
        width: 500px;
        vertical-align: center;
        overflow: hidden;
        text-align: center;
        padding-bottom: 40px;
    }
</style>

<form action='/sessions' method='post' class='form'>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <h1>Please log in.</h1>
    <br>
    <label>Email:</label>
    <input type='email' name='email' id='email' class='text_input' placeholder='email@email.com'/>
    <br><br>
    <label>Password:</label>
    <input type='password' name='password' id='password' class='text_input' placeholder='password'/>
    <br><br>
    <br>
    <input type='submit' name='login' value='Log In' id='button'/>
</form>

<br><br>
<hr><hr>
<br><br>

<form action='/users' method='post' class='form'>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <h1>New User? Register here.</h1>
    <br>
    <label>Name:</label>
    <input type='text' name=user[name] id='user_name' class='text_input' placeholder='your name'/>
    <br><br>
    <label>Alias:</label>
    <input type='text' name=user[alias_name] id='user_alias_name' class='text_input' placeholder='username'/>
    <br><br>
    <label>Email:</label>
    <input type='email' name=user[email] id='user_email' class='text_input' placeholder='email@email.com'/>
    <br><br>
    <label>Password:</label>
    <input type='password' name=user[password] id='user_password' class='text_input' placeholder='password'/>
    <br><br>
    <label>Confirm Password:</label>
    <input type='password' name=user[password_confirmation] id='user_password_confirmation' class='text_input' placeholder='password'/>
    <br><br>
    <br>
    <input type='submit' name='register' value='Register' id='button'/>
</form>



